{
  "name": "parameter-risk-analysis",
  "version": "1.0.0",
  "description": "Parameter Risk Analysis Application for AWS Hackathon 2025",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "dev:backend": "nodemon backend/src/server.js",
    "dev:frontend": "cd frontend && npm start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "node backend/dist/server.js"
  },
  "keywords": [
    "aws",
    "hackathon",
    "parameter-analysis",
    "risk-assessment",
    "xml-processing"
  ],
  "author": "AWS Hackathon Team 2025",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "testcontainers": "^10.2.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "redis": "^4.6.10",
    "xml2js": "^0.6.2"
  },
  "type": "module",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "backend/src/**/*.{js,ts}",
      "frontend/src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.(js|jsx|ts|tsx)",
      "**/*.(test|spec).(js|jsx|ts|tsx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.js$": ["ts-jest", {
        "useESM": true
      }]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
